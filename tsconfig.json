{
  "compilerOptions": {
    "types": [
      "node", 
      "@wdio/mocha-framework",
      "./src/webdriverio"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES2023",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
  ],
}