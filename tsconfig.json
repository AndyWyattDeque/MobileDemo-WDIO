{
  "compilerOptions": {
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "@wdio/globals/types",
      "expect-webdriverio"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ]
}