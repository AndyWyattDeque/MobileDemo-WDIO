{
  "compilerOptions": {
    "types": [
      "node", 
      "@wdio/globals",
      "@wdio/mocha-framework"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES2023",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}